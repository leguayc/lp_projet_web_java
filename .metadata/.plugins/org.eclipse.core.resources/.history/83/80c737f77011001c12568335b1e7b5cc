
public class Point {
	private double x;
	private double y;
	
	public Point(double x, double y) {
		this.x = x;
		this.y = y;
	}
	
	public void moveTo(double x, double y) {
		this.x = x;
		this.y = y;
	}
	
	public void rMoveTo(double x, double y) {
		this.x += x;
		this.y += y;
	}
	
	public double distance(Point p) {
		double dist = 0;
		
		dist += this.x - p.getX();
		dist += this.y - p.getY();
		
		return dist;
	}
	
	public double getX() {
		return this.x;
	}
	
	public double getY() {
		return this.y;
	}
}
