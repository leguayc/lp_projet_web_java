package BatailleCartes;
import java.util.*;

public class Player {
	private ArrayList<Carte> cartes;
	
	public Player() {
		this.cartes = new ArrayList<Carte>();
	}
	
	public Carte tireCarte() {
		Carte c;
		if(cartes.size() > 0) {
			c = cartes.get(0);
			cartes.remove(0);
		}
		else {
			c = null;
		}
		
		return c;
	}
	
	public void addCarte(Carte c) {
		cartes.add(c);
	}
	
	public int getDeckSize() {
		return cartes.size();
	}
	
	public boolean hasWon() {
		return cartes.size() == 52;
	}
}
