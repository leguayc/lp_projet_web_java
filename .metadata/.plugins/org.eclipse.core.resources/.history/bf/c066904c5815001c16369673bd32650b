package BatailleCartes;

import java.util.ArrayList;

public class Deck {
	private ArrayList<Carte> deck;
	
	public Deck() {
		this.deck = new ArrayList<Carte>();
		this.initDeck();
	}
	
	private void initDeck() {
		for(int i = 0; i < 4; i++) {
			for(int j = 0; j < 13; j++) {
				this.deck.add(new Carte(i, j));
			}
		}
	}
	
	public void shuffle(Player p1, Player p2) {
		int random = 0;
		while(deck.size() != 0) {
			random = (int)(Math.random() * deck.size());
			p1.addCarte(deck.get(random));
			deck.remove(random);
			random = (int)(Math.random() * deck.size());
			p2.addCarte(deck.get(random));
			deck.remove(random);
		}
	}
}
