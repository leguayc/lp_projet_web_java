import java.util.*;

public class PointMain {

	public static void main(String[] args) {
		ArrayList<Point> points = new ArrayList<Point>();
		
		// Create four points
		for(int i = 0; i < 4; i++) {
			points.add(new Point(i,i));
		}
		
		// Do stuff on points
		points.get(0).moveTo(3, 5);
		points.get(1).rMoveTo(points.get(2).getX(), points.get(3).getY());
		points.get(0).distance(points.get(1));
		
		// Display points
		for(int i = 0; i < points.size(); i++) {
			System.out.println("Point " + (i+1) + " : " + points.get(i));
		}
	}

}
